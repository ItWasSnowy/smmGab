@model IEnumerable<SmmGab.Domain.Models.Publication>
@{
    ViewData["Title"] = "Публикации";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="d-flex align-items-center gap-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Назад
        </a>
        <h2 class="mb-0">Публикации</h2>
    </div>
    <a asp-controller="Publications" asp-action="Create" class="btn btn-primary">Создать публикацию</a>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var publication in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card publication-card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-3">
                            <div class="publication-icon me-3">
                                <div class="publication-icon-bg bg-success">
                                    <i class="bi bi-file-post text-white"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-2 fw-bold">@(publication.Text.Length > 50 ? publication.Text.Substring(0, 50) + "..." : publication.Text)</h5>
                                @{
                                    var statusClass = publication.Status switch
                                    {
                                        SmmGab.Domain.Enums.PublicationStatus.Published => "success",
                                        SmmGab.Domain.Enums.PublicationStatus.Failed => "danger",
                                        SmmGab.Domain.Enums.PublicationStatus.Publishing => "warning",
                                        SmmGab.Domain.Enums.PublicationStatus.Scheduled => "info",
                                        _ => "secondary"
                                    };
                                }
                                <span class="badge bg-@statusClass mb-2">
                                    @publication.Status
                                </span>
                            </div>
                        </div>
                        
                        <div class="publication-info mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-folder text-muted me-2"></i>
                                <small class="text-muted">@publication.Project.Name</small>
                            </div>
                            @if (publication.ScheduledAtUtc.HasValue)
                            {
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-calendar3 text-muted me-2"></i>
                                    <small class="text-muted">@publication.ScheduledAtUtc.Value.ToString("dd.MM.yyyy HH:mm")</small>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-clock text-muted me-2"></i>
                                    <small class="text-muted">Не запланировано</small>
                                </div>
                            }
                        </div>
                        
                        <div class="d-grid">
                            <a asp-controller="Publications" asp-action="Details" asp-route-id="@publication.Id" class="btn btn-outline-primary">
                                <i class="bi bi-eye me-1"></i>Подробнее
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="card-body text-center py-5">
            <i class="bi bi-file-post display-1 text-muted mb-3"></i>
            <h5 class="text-muted mb-3">У вас пока нет публикаций</h5>
            <a asp-controller="Publications" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Создайте первую публикацию
            </a>
        </div>
    </div>
}

<style>
    .publication-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border-radius: 1rem;
    }
    
    .publication-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .publication-icon-bg {
        width: 50px;
        height: 50px;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }
    
    .publication-info {
        border-top: 1px solid #e9ecef;
        padding-top: 1rem;
    }
</style>

