@model SmmGab.Controllers.CreateProjectViewModel
@{
    ViewData["Title"] = "Создать проект";
}

<div class="d-flex align-items-center mb-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-3">
        <i class="bi bi-arrow-left me-1"></i>Назад
    </a>
    <h2 class="mb-0">Создать проект</h2>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-white border-0 pb-0">
        <h5 class="card-title mb-0 fw-bold">
            <i class="bi bi-folder me-2 text-primary"></i>Информация о проекте
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="alert alert-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-semibold">
                    <i class="bi bi-tag me-2"></i>Название проекта
                </label>
                <input asp-for="Name" class="form-control" placeholder="Введите название проекта" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-2"></i>Создать
                </button>
                <a asp-action="Index" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

